@model IEnumerable < EmptyProject.Models.Store>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create" , "Create")
</p>

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
           BrandId 
        </th>
        <th>
            Id
        </th>
     </tr>
        @foreach (var store in Model)
        {
            <tr>
                <td>
                    @store.Name
                </td>
                <td>
                    @store.Description
                </td>
                <td>
                    @store.BrandId
                </td>
                <td>
                    @store.Id
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = store.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = store.Id })
                </td>
            </tr>
        }
</table>
